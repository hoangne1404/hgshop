{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      "$uid": {
        ".write": "auth != null && auth.uid == $uid",
        ".read": "auth != null && (auth.uid == $uid || root.child('users/' + auth.uid + '/role').val() == 'admin')",
        ".validate": "newData.hasChildren(['email', 'name'])"
      }
    },
    "products": {
      ".read": "auth != null",
      ".write": "auth != null && (root.child('users/' + auth.uid + '/role').val() == 'admin' || root.child('users/' + auth.uid + '/role').val() == 'seller')",
      "$product_id": {
        ".validate": "newData.hasChildren(['id', 'name', 'price', 'category'])"
      }
    },
    "orders": {
      ".read": "auth != null && (root.child('users/' + auth.uid + '/role').val() == 'admin' || root.child('users/' + auth.uid + '/role').val() == 'seller')",
      ".write": "auth != null",
      "$order_id": {
        ".read": "auth != null && (root.child('users/' + auth.uid + '/role').val() == 'admin' || root.child('users/' + auth.uid + '/role').val() == 'seller' || data.child('userId').val() == auth.uid)",
        ".write": "auth != null && (root.child('users/' + auth.uid + '/role').val() == 'admin' || newData.child('userId').val() == auth.uid)",
        ".validate": "newData.hasChildren(['id', 'userId', 'items', 'total', 'status'])"
      }
    },
    "sellers": {
      ".read": "auth != null",
      ".write": "auth != null && (root.child('users/' + auth.uid + '/role').val() == 'admin' || root.child('users/' + auth.uid + '/role').val() == 'seller')",
      "$seller_id": {
        ".write": "auth != null && (root.child('users/' + auth.uid + '/role').val() == 'admin' || auth.uid == $seller_id)"
      }
    },
    "admin_notifications": {
      ".read": "auth != null && root.child('users/' + auth.uid + '/role').val() == 'admin'",
      ".write": "auth != null"
    }
  }
}